<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:weightSum="1">

    <ImageView
        android:id="@+id/recipe_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/recipe1" />

    <TextView
        android:text="Title"
        android:padding="@dimen/for_8"
        android:id="@+id/recipe_detail_title"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="description"
        android:paddingLeft="@dimen/for_8"
        android:textSize="16sp"
        android:paddingBottom="@dimen/for_8"
        android:id="@+id/recipe_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/divider"
        android:paddingTop="@dimen/for_8"
        android:paddingLeft="@dimen/for_8"
        android:layout_width="361dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/recipe_detail_description"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="rule"
        android:paddingTop="@dimen/for_8"
        android:paddingLeft="@dimen/for_8"
        android:id="@+id/recipe_detail_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>